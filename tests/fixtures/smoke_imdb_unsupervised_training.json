{
  "dataset_reader": {
    "type": "imdb_review_reader",
    "tokenizer": {
      "type": "word"
    }
  },
  "train_data_path": "tests/fixtures/smoke.jsonl",
  "validation_data_path": "tests/fixtures/smoke.jsonl",
  "vocabulary": {
    "max_vocab_size": 10000,
    "tokens_to_add": {
      "labels": ["positive", "negative"]
    }
  },
  "model": {
    "type": "topic_rnn",
    "classification_mode": false,
    "freeze_feature_extraction": false,
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "embedding_dim": 100,
        "trainable": true,
        "vocab_namespace": "tokens"
      }
    },
    "text_encoder": {
      "type": "rnn",
      "input_size": 100,
      "hidden_size": 128,
      "num_layers": 2
    },
    "topic_dim": 10,
    "bptt_limit": 35
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["input_tokens", "num_tokens"]],
    "batch_size": 20
  },

  "trainer": {
    "num_epochs": 1,
    "patience": 10,
    "cuda_device": -1,
    "grad_clipping": 5.0,
    "optimizer": {
      "type": "adam"
    }
  }
}
